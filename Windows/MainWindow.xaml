<Window
    mc:Ignorable="d"
    xmlns:local="clr-namespace:Backup"
    x:Class="Backup.Windows.MainWindow"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    Width="600"
    Height="400"
    Icon="/Anonymity.ico"
    Title="请选择要备份的应用"
    WindowStartupLocation="CenterScreen"
>
    <Grid>
        <Button x:Name="AddButton" Style="{StaticResource WhiteButton}" Height="27" Width="117" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="AddButton_Click" Content="添加类型"/>
        <Button x:Name="BackupButton" Style="{StaticResource WhiteButton}" Height="27" Width="117" HorizontalAlignment="Left" Margin="449,10,0,0" VerticalAlignment="Top" Click="BackupButton_Click" Content="备份文件"/>
        <ScrollViewer x:Name="scrollViewer" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" ScrollChanged="ListViewScrollViewer_ScrollChanged" Margin="0,42,0,0">
            <Grid>
                <CheckBox Margin="10,10,335,313" Content="保存文件"/>
            </Grid>
        </ScrollViewer>

        <!-- 垂直滚动条 -->
        <ScrollBar Name="VerticalScrollBar" Orientation="Vertical" Visibility="Visible" HorizontalAlignment="Right" ValueChanged="VerticalScrollBar_ValueChanged" Margin="0,42,0,0"/>
        <!-- 水平滚动条 -->
        <ScrollBar Name="HorizontalScrollBar" Orientation="Horizontal" Visibility="Visible" VerticalAlignment="Bottom" ValueChanged="HorizontalScrollBar_ValueChanged"/>
    </Grid>
</Window>